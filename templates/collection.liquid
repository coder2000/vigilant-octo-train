{% comment %}
  Dead Inside Depot - Collection Template
  Browse our curated collection of existential dread accessories
{% endcomment %}

<div class="collection-wrapper">
  <div class="collection-header">
    <h1 class="collection-title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-description">
        {{ collection.description }}
      </div>
    {% endif %}
  </div>

  {% if collection.products.size > 0 %}
    <div class="collection-filters">
      <div class="collection-sort">
        <label for="SortBy">Sort by:</label>
        <select id="SortBy" name="sort_by">
          <option value="manual">Featured</option>
          <option value="best-selling">Best Selling</option>
          <option value="title-ascending">Alphabetically, A-Z</option>
          <option value="title-descending">Alphabetically, Z-A</option>
          <option value="price-ascending">Price, Low to High</option>
          <option value="price-descending">Price, High to Low</option>
          <option value="created-ascending">Date, Old to New</option>
          <option value="created-descending">Date, New to Old</option>
        </select>
      </div>
    </div>

    <div class="collection-grid">
      {% for product in collection.products %}
        <div class="product-card">
          <a href="{{ product.url }}" class="product-card__link">
            <div class="product-card__media">
              {% if product.featured_media %}
                {{ product.featured_media | image_url: width: 400 | image_tag: 
                  loading: 'lazy',
                  sizes: '(min-width: 750px) 25vw, 50vw',
                  widths: '165, 360, 533, 720, 940, 1066',
                  alt: product.featured_media.alt | escape
                }}
              {% else %}
                <div class="product-card__placeholder">
                  <svg width="100" height="100" viewBox="0 0 100 100" fill="none">
                    <rect width="100" height="100" fill="var(--color-secondary)"/>
                    <text x="50" y="50" text-anchor="middle" dy="0.3em" fill="var(--color-text)" font-size="12">No Image</text>
                  </svg>
                </div>
              {% endif %}
              
              {% if product.compare_at_price > product.price %}
                <div class="product-card__badge">Sale</div>
              {% endif %}
            </div>
            
            <div class="product-card__info">
              <h3 class="product-card__title">{{ product.title }}</h3>
              <div class="product-card__price">
                {% if product.compare_at_price > product.price %}
                  <span class="price-compare">{{ product.compare_at_price | money }}</span>
                {% endif %}
                <span class="price-current">{{ product.price | money }}</span>
              </div>
              
              {% if product.tags contains 'new-arrival' %}
                <div class="product-card__tag">‚ú® Fresh Despair</div>
              {% elsif product.tags contains 'bestseller' %}
                <div class="product-card__tag">üî• Popular Misery</div>
              {% elsif product.tags contains 'limited-edition' %}
                <div class="product-card__tag">‚è∞ Limited Suffering</div>
              {% endif %}
            </div>
          </a>
        </div>
      {% endfor %}
    </div>

    {% if paginate.pages > 1 %}
      <nav class="pagination" role="navigation" aria-label="Pagination">
        {% if paginate.previous %}
          <a href="{{ paginate.previous.url }}" class="pagination__item pagination__item--prev">
            ‚Üê Previous
          </a>
        {% endif %}

        {% for part in paginate.parts %}
          {% if part.is_link %}
            <a href="{{ part.url }}" class="pagination__item">{{ part.title }}</a>
          {% else %}
            {% if part.title == paginate.current_page %}
              <span class="pagination__item pagination__item--current">{{ part.title }}</span>
            {% else %}
              <span class="pagination__item">{{ part.title }}</span>
            {% endif %}
          {% endif %}
        {% endfor %}

        {% if paginate.next %}
          <a href="{{ paginate.next.url }}" class="pagination__item pagination__item--next">
            Next ‚Üí
          </a>
        {% endif %}
      </nav>
    {% endif %}
  {% else %}
    <div class="collection-empty">
      <h2>Nothing Here But the Void</h2>
      <p>This collection is as empty as our souls. Check back later when we've restocked our existential crisis supplies.</p>
      <a href="{{ routes.root_url }}" class="btn btn--primary">Return to Despair</a>
    </div>
  {% endif %}
</div>

<style>
.collection-wrapper {
  max-width: var(--page-width);
  margin: 0 auto;
  padding: 2rem;
}

.collection-header {
  text-align: center;
  margin-bottom: 3rem;
}

.collection-title {
  font-family: var(--font-heading-family);
  font-size: 3rem;
  color: var(--color-text);
  margin-bottom: 1rem;
  text-transform: uppercase;
  letter-spacing: 0.2rem;
}

.collection-description {
  color: var(--color-text);
  font-size: 1.6rem;
  line-height: 1.6;
  max-width: 60rem;
  margin: 0 auto;
}

.collection-filters {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 2rem;
}

.collection-sort label {
  color: var(--color-text);
  margin-right: 1rem;
}

.collection-sort select {
  padding: 0.8rem 1rem;
  border: 1px solid var(--color-secondary);
  background-color: var(--color-background);
  color: var(--color-text);
  border-radius: 0.3rem;
}

.collection-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  margin-bottom: 3rem;
}

.product-card {
  background-color: rgba(255,255,255,0.02);
  border: 1px solid var(--color-secondary);
  border-radius: 0.5rem;
  overflow: hidden;
  transition: all 0.3s ease;
  position: relative;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 25px rgba(0,0,0,0.3);
  border-color: var(--color-accent);
}

.product-card__link {
  text-decoration: none;
  color: inherit;
  display: block;
}

.product-card__media {
  position: relative;
  overflow: hidden;
  aspect-ratio: 1;
}

.product-card__media img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-card:hover .product-card__media img {
  transform: scale(1.05);
}

.product-card__placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-secondary);
}

.product-card__badge {
  position: absolute;
  top: 1rem;
  right: 1rem;
  background-color: var(--color-accent);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 0.3rem;
  font-size: 1.2rem;
  font-weight: bold;
  text-transform: uppercase;
}

.product-card__info {
  padding: 1.5rem;
}

.product-card__title {
  color: var(--color-text);
  font-size: 1.6rem;
  margin-bottom: 1rem;
  line-height: 1.3;
}

.product-card__price {
  margin-bottom: 1rem;
}

.price-compare {
  color: var(--color-accent);
  text-decoration: line-through;
  margin-right: 0.5rem;
  font-size: 1.3rem;
}

.price-current {
  color: var(--color-text);
  font-size: 1.6rem;
  font-weight: bold;
}

.product-card__tag {
  font-size: 1.2rem;
  color: var(--color-accent);
  font-style: italic;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1rem;
  margin-top: 3rem;
}

.pagination__item {
  padding: 1rem 1.5rem;
  border: 1px solid var(--color-secondary);
  background-color: var(--color-background);
  color: var(--color-text);
  text-decoration: none;
  border-radius: 0.3rem;
  transition: all 0.3s ease;
}

.pagination__item:hover {
  background-color: var(--color-accent);
  color: white;
}

.pagination__item--current {
  background-color: var(--color-accent);
  color: white;
}

.collection-empty {
  text-align: center;
  padding: 4rem 2rem;
}

.collection-empty h2 {
  font-family: var(--font-heading-family);
  font-size: 2.5rem;
  color: var(--color-text);
  margin-bottom: 1rem;
}

.collection-empty p {
  color: var(--color-text);
  font-size: 1.6rem;
  margin-bottom: 2rem;
  max-width: 50rem;
  margin-left: auto;
  margin-right: auto;
}

@media screen and (max-width: 749px) {
  .collection-grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }
  
  .collection-title {
    font-size: 2.5rem;
  }
  
  .collection-filters {
    justify-content: center;
  }
}
</style>

<script>
// Collection sorting functionality
document.addEventListener('DOMContentLoaded', function() {
  const sortSelect = document.getElementById('SortBy');
  if (sortSelect) {
    sortSelect.addEventListener('change', function() {
      const url = new URL(window.location);
      url.searchParams.set('sort_by', this.value);
      window.location.href = url.toString();
    });
    
    // Set current sort value
    const urlParams = new URLSearchParams(window.location.search);
    const currentSort = urlParams.get('sort_by');
    if (currentSort) {
      sortSelect.value = currentSort;
    }
  }
});
</script>