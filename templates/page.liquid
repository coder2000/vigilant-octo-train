{% comment %}
  Dead Inside Depot - Page Template
  For all your static page needs in the darkness
{% endcomment %}

<div class="page-wrapper">
  <div class="page-container">
    <header class="page-header">
      <h1 class="page-title">{{ page.title }}</h1>
    </header>

    <div class="page-content">
      {{ page.content }}
    </div>
  </div>
</div>

<style>
  .page-wrapper {
    padding: 4rem 2rem;
    min-height: 50vh;
  }

  .page-container {
    max-width: 80rem;
    margin: 0 auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--color-secondary);
  }

  .page-title {
    font-family: var(--font-heading-family);
    font-size: clamp(2.5rem, 5vw, 4rem);
    color: var(--color-text);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 0.2rem;
  }

  .page-content {
    color: var(--color-text);
    line-height: 1.8;
    font-size: 1.6rem;
  }

  .page-content h1,
  .page-content h2,
  .page-content h3,
  .page-content h4,
  .page-content h5,
  .page-content h6 {
    font-family: var(--font-heading-family);
    color: var(--color-text);
    margin: 3rem 0 1.5rem 0;
    text-transform: uppercase;
    letter-spacing: 0.1rem;
  }

  .page-content h1 { font-size: 3rem; }
  .page-content h2 { font-size: 2.5rem; }
  .page-content h3 { font-size: 2rem; }
  .page-content h4 { font-size: 1.8rem; }
  .page-content h5 { font-size: 1.6rem; }
  .page-content h6 { font-size: 1.4rem; }

  .page-content p {
    margin-bottom: 2rem;
  }

  .page-content a {
    color: var(--color-accent);
    text-decoration: underline;
    transition: color 0.3s ease;
  }

  .page-content a:hover {
    color: var(--color-primary);
  }

  .page-content ul,
  .page-content ol {
    margin: 2rem 0;
    padding-left: 3rem;
  }

  .page-content li {
    margin-bottom: 1rem;
  }

  .page-content blockquote {
    border-left: 4px solid var(--color-accent);
    padding-left: 2rem;
    margin: 3rem 0;
    font-style: italic;
    opacity: 0.9;
  }

  .page-content img {
    max-width: 100%;
    height: auto;
    border-radius: 0.3rem;
    margin: 2rem 0;
  }

  .page-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 3rem 0;
    background-color: rgba(26, 26, 26, 0.5);
    border-radius: 0.3rem;
    overflow: hidden;
  }

  .page-content th,
  .page-content td {
    padding: 1.5rem;
    text-align: left;
    border-bottom: 1px solid var(--color-secondary);
  }

  .page-content th {
    background-color: var(--color-secondary);
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 0.1rem;
  }

  .page-content code {
    background-color: var(--color-secondary);
    padding: 0.2rem 0.5rem;
    border-radius: 0.2rem;
    font-family: 'Courier New', monospace;
    font-size: 0.9em;
  }

  .page-content pre {
    background-color: var(--color-secondary);
    padding: 2rem;
    border-radius: 0.3rem;
    overflow-x: auto;
    margin: 2rem 0;
  }

  .page-content pre code {
    background: none;
    padding: 0;
  }

  @media screen and (max-width: 749px) {
    .page-wrapper {
      padding: 3rem 1rem;
    }

    .page-content {
      font-size: 1.5rem;
    }

    .page-content ul,
    .page-content ol {
      padding-left: 2rem;
    }

    .page-content table {
      font-size: 1.4rem;
    }

    .page-content th,
    .page-content td {
      padding: 1rem;
    }
  }
</style>