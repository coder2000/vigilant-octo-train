{% comment %}
  Icon Snippet
  Renders SVG icons for the theme
  
  Accepts:
  - icon: icon name (string)
  - size: icon size (number, defaults to 20)
  - class: additional CSS classes (string)
  - aria_hidden: boolean for aria-hidden attribute (defaults to true)
  - title: accessible title for the icon (string)
{% endcomment %}

{%- liquid
  assign size = size | default: 20
  assign aria_hidden = aria_hidden | default: true
  assign stroke_width = stroke_width | default: 1.5
-%}

<svg 
  width="{{ size }}" 
  height="{{ size }}" 
  viewBox="0 0 24 24" 
  fill="none" 
  stroke="currentColor" 
  stroke-width="{{ stroke_width }}" 
  stroke-linecap="round" 
  stroke-linejoin="round"
  {%- if class %} class="{{ class }}"{% endif -%}
  {%- if aria_hidden %} aria-hidden="true"{% endif -%}
  {%- if title %} role="img"{% endif -%}
>
  {%- if title -%}<title>{{ title }}</title>{%- endif -%}
  
  {%- case icon -%}
    {%- when 'search' -%}
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
      
    {%- when 'user' -%}
      <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
      <circle cx="12" cy="7" r="4"></circle>
      
    {%- when 'shopping-cart' -%}
      <circle cx="8" cy="21" r="1"></circle>
      <circle cx="19" cy="21" r="1"></circle>
      <path d="M2.05 2.05h2l2.66 12.42a2 2 0 0 0 2 1.58h9.78a2 2 0 0 0 1.95-1.57L23 6H6"></path>
      
    {%- when 'heart' -%}
      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
      
    {%- when 'menu' -%}
      <line x1="4" x2="20" y1="12" y2="12"></line>
      <line x1="4" x2="20" y1="6" y2="6"></line>
      <line x1="4" x2="20" y1="18" y2="18"></line>
      
    {%- when 'close' or 'x' -%}
      <path d="M18 6 6 18"></path>
      <path d="m6 6 12 12"></path>
      
    {%- when 'chevron-down' -%}
      <path d="m6 9 6 6 6-6"></path>
      
    {%- when 'chevron-up' -%}
      <path d="m18 15-6-6-6 6"></path>
      
    {%- when 'chevron-left' -%}
      <path d="m15 18-6-6 6-6"></path>
      
    {%- when 'chevron-right' -%}
      <path d="m9 18 6-6-6-6"></path>
      
    {%- when 'plus' -%}
      <path d="M5 12h14"></path>
      <path d="M12 5v14"></path>
      
    {%- when 'minus' -%}
      <path d="M5 12h14"></path>
      
    {%- when 'star' -%}
      <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
      
    {%- when 'mail' -%}
      <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
      <polyline points="22,6 12,13 2,6"></polyline>
      
    {%- when 'phone' -%}
      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
      
    {%- when 'facebook' -%}
      <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
      
    {%- when 'twitter' -%}
      <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
      
    {%- when 'instagram' -%}
      <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
      <path d="m16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
      <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
      
    {%- when 'youtube' -%}
      <path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"></path>
      <polygon points="9.75,15.02 15.5,11.75 9.75,8.48"></polygon>
      
    {%- when 'arrow-right' -%}
      <path d="M5 12h14"></path>
      <path d="m12 5 7 7-7 7"></path>
      
    {%- when 'arrow-left' -%}
      <path d="M19 12H5"></path>
      <path d="m12 19-7-7 7-7"></path>
      
    {%- when 'check' -%}
      <path d="M20 6 9 17l-5-5"></path>
      
    {%- when 'alert-circle' -%}
      <circle cx="12" cy="12" r="10"></circle>
      <line x1="12" x2="12" y1="8" y2="12"></line>
      <line x1="12" x2="12.01" y1="16" y2="16"></line>
      
    {%- when 'info' -%}
      <circle cx="12" cy="12" r="10"></circle>
      <path d="M12 16v-4"></path>
      <path d="M12 8h.01"></path>
      
    {%- when 'gift' -%}
      <rect x="3" y="8" width="18" height="4" rx="1"></rect>
      <path d="M12 8v13"></path>
      <path d="M19 12v7a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2v-7"></path>
      <path d="M7.5 8a2.5 2.5 0 0 1 0-5A4.9 4.9 0 0 1 12 8a4.9 4.9 0 0 1 4.5-5 2.5 2.5 0 0 1 0 5"></path>
      
    {%- when 'truck' -%}
      <path d="M14 18V6a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v11a1 1 0 0 0 1 1h2"></path>
      <path d="M15 18H9"></path>
      <path d="M19 18h2a1 1 0 0 0 1-1v-3.65a1 1 0 0 0-.22-.624l-3.48-4.35A1 1 0 0 0 17.52 8H14"></path>
      <circle cx="17" cy="18" r="2"></circle>
      <circle cx="7" cy="18" r="2"></circle>
      
    {%- else -%}
      <!-- Default icon if no match found -->
      <circle cx="12" cy="12" r="10"></circle>
      <line x1="12" x2="12" y1="8" y2="12"></line>
      <line x1="12" x2="12.01" y1="16" y2="16"></line>
  {%- endcase -%}
</svg>